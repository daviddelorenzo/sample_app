public class Solution {
    public int candy(int[] ratings) {
        int lineSize = ratings.length;
        int[] CandyCount = new int[lineSize];
        int minimumCandy = lineSize;//set equal to line size, everyone is guarenteed one piece of candy

        //iterate left to right checking left neighbors
        for(int i = 1; i < lineSize; i++){
            //check left in line
            if(ratings[i] > ratings[i-1]){
                    CandyCount[i] = CandyCount[i-1] + 1; //You are a higher rating than left neighbor, more candy
            }
        }
       
        //iterate right to left checking right neighbors
        for(int i = lineSize - 1; i >= 0; i--){
            //end of line to start, check left only
            if(i < lineSize - 1  && (ratings[i+1] < ratings[i]) && (CandyCount[i+1] >= CandyCount[i])){//different ratings, different candy
                CandyCount[i] = CandyCount[i+1] + 1;
            }
            minimumCandy += CandyCount[i];//add all candy
        }
        return minimumCandy;//return the minimum amount of candy
    }//end method
}//end class

